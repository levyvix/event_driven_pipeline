FROM python:3.11-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy dependency files first for caching
COPY consumer/pyproject.toml ./

# Install dependencies
RUN uv sync --frozen

# Copy the rest of the application
COPY consumer/ .

# Run the application
CMD ["uv", "run", "python", "-m", "consumer_app.message_consumer"]
